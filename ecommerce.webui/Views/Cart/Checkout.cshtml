<h3>Ödeme Bilgileri</h3>
<hr >
<div class="row my-4">
    <div class="col-md-7">

        <form method="POST" asp-controller="Cart" asp-action="Checkout">
            <input type="hidden" name="cartId" value="@Model.CartModel.Id">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.FirstName">Ad</label>
                    <input asp-for="@Model.FirstName" class="form-control" required>
                </div>
                 <div class="col-md-6">
                    <label asp-for="@Model.LastName">Soyad</label>
                    <input asp-for="@Model.LastName" class="form-control" required>
                </div>
            </div>
             <div class="row mb-3">
                 <div class="col-md-4">
                    <label asp-for="@Model.Phone">Telefon</label>
                    <input asp-for="@Model.Phone" class="form-control" required>
                </div>
                 <div class="col-md-4">
                    <label asp-for="@Model.Email">Email</label>
                    <input asp-for="@Model.Email" class="form-control" required>
                </div>
                 <div class="col-md-4">
                    <label asp-for="@Model.City">Şehir</label>
                    <input asp-for="@Model.City" class="form-control" required>
                </div>
            </div>
            <div class="row">
            <div class="mb-3 col-md-6">
                <label  asp-for="@Model.Address">Adres</label>
                <textarea  asp-for="@Model.Address" class="form-control" required></textarea>
            </div>
            
            </div>

             <h4 class="mb-3 my-4">Kart Bilgileri</h4>
            <hr class="mb-3">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.CardName">Ad Soyad</label>
                    <input asp-for="@Model.CardName" class="form-control" required>
                </div>
                    <div class="col-md-6">
                    <label asp-for="@Model.CardNumber">Kart Numarası</label>
                    <input asp-for="@Model.CardNumber" class="form-control" required> 
                </div>
            </div>
             <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationMonth">Ay</label>
                    <input asp-for="@Model.ExpirationMonth" class="form-control" required>
                </div>
                    <div class="col-md-4">
                    <label asp-for="@Model.ExpirationYear">Yıl</label>
                    <input asp-for="@Model.ExpirationYear" class="form-control" required>
                </div>
                  <div class="col-md-4">
                    <label asp-for="@Model.Cvc">CVC</label>
                    <input asp-for="@Model.Cvc" class="form-control" required>
                </div>
            </div>
            <button type="submit" class="btn btn-dark btn-lg">Satın Al</button>
        </form>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-4">
        <h4 class="mb-3">
            <span>Özet Bilgiler</span>
        </h4>
        <ul class="list-group mb-3">

            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>@item.Quantity adet @item.Name.Substring(0,20)..</h6>
                    </div>
                    <span class="text">@(item.Price * item.Quantity)<i class="fa-solid fa-turkish-lira-sign"></i></span>
                </li>
            }
                  <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>Kargo Ücreti</h6>
                    </div>
                    @if(Model.CartModel.TotalPrice() < 750 ){
                        if(Model.CartModel.TotalPrice()==0){
                    <span class="text">0<i class="fa-solid fa-turkish-lira-sign"></i></span>
                        }else{
                    <span class="text">29,99<i class="fa-solid fa-turkish-lira-sign"></i></span>
                        }
                    }else{
                    <del class="text-danger">29,99<i class="fa-solid fa-turkish-lira-sign"></i></del>
                    }
                </li>

            <li class="list-group-item d-flex justify-content-between">
                <span>Toplam (Kargo Dahil)</span>
                    @if(Model.CartModel.TotalPrice() < 750 && Model.CartModel.TotalPrice()!=0){
                <strong>@(Model.CartModel.TotalPrice() + 29.99)<i class="fa-solid fa-turkish-lira-sign"></i></strong>
                }else{
                <strong>@Model.CartModel.TotalPrice().ToString()<i class="fa-solid fa-turkish-lira-sign"></i></strong>
                }
            </li>
        </ul>

    </div>
</div>
</div>