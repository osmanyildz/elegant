@model CartModel

<section class="h-100 gradient-custom">
  <div class="container py-5">
    <div class="row d-flex justify-content-center my-4">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Sepetim</h5>
          </div>
          <div class="card-body">
          
            @if (Model.CartItems.Count() == 0)
            {
              <div>Sepetiniz Boş</div>
              
            }
            else
            {
              @foreach (var item in Model.CartItems)
              {
                @await Html.PartialAsync("_cartItem", item)
             
              }
            }
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body">
            <p><strong>Teslimat Süresi </strong></p>
            <p class="mb-0">Siparişleriniz verildikten sonra yoğunluğa bağlı 1-2 iş günü içinde kargoya teslim edilir.
            </p>
          </div>
        </div>
      </div>


      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Sipariş Özeti</h5>
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                Ürünlerin Fiyatı
                @if(Model.CartItems.Count()==0){
                <span>0 <i class="fa-solid fa-turkish-lira-sign"></i></span>
                }else{
                <span>@(Model.TotalPrice()) <i class="fa-solid fa-turkish-lira-sign"></i></span>
                }
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                <span>Kargo Fiyatı</span>
                @if(Model.CartItems.Count()==0){
                <span>0<i class="fa-solid fa-turkish-lira-sign"></i></span>
                }else{
                  if(Model.TotalPrice() > 750){
                <del class="text-danger">29.99<i class="fa-solid fa-turkish-lira-sign"></i></del>
                  }else{
                <span>29.99<i class="fa-solid fa-turkish-lira-sign"></i></span>
                  }
                }
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                <div>
                  <strong>Toplam Tutar</strong>
                  <strong>
                    <p class="mb-0">(Kargo Dahil)</p>
                  </strong>
                </div>
                @* <span><strong>Toplam Tutar <i class="fa-solid fa-turkish-lira-sign"></i></strong></span> *@
                @if(Model.CartItems.Count()==0){
                <span>0<i class="fa-solid fa-turkish-lira-sign"></i></span>
                }else{
                  if(Model.TotalPrice()>750){
                <span>@(Model.TotalPrice()) <i class="fa-solid fa-turkish-lira-sign"></i></span>
                  }else{

                <span>@(Model.TotalPrice() + 29.99) <i class="fa-solid fa-turkish-lira-sign"></i></span>
                  }

                }

              </li>
            </ul>


             <a type="button" class="btn btn-dark btn-block" href="/cart/checkout">Ödemeye Git</a>

          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>





