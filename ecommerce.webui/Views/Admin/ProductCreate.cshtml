<div class="container my-5">
    <form action="/admin/ProductCreate" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
            <label for="name" class="form-label">Ürün Adı</label>
            <input name="Name" id="name" class="form-control">
            </div>
            <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input name="Price" id="price" class="form-control">
            </div>
            <div class="mb-3">
            <label for="description" class="form-label">Açıklama</label>
            <textarea name="Description" id="description" class="form-control"></textarea>
            </div>
        <div class="mb-3"> 
            <h5>Ürün Resimleri</h5>
    <input type="file" name="file1" class="form-control mb-1" />
    <input type="file" name="file2" class="form-control mb-1" />
    <input type="file" name="file3" class="form-control mb-1" />
        </div>   
      
    </div>
        <div class="col-md-4 ms-5">
          
            
           <h5>Üst Kategori</h5>
                <div class="form-check">
                <input class="form-check-input" type="radio" name="ParentCategoryId" value="1" id="parentCat">
                <label class="form-check-label" for="parentCat">
                Üst Giyim
                </label>
                </div>
                <div class="form-check">
                <input class="form-check-input" type="radio" name="ParentCategoryId" value="2" id="parentCat2">
                <label class="form-check-label" for="parentCat2">
                    Alt Giyim
                </label>
                </div> 
            <hr>
            <h5>Kategoriler</h5>
                @foreach(var item in ViewBag.categories){
                <div class=" form-check">
                <input name="categoryIds" value="@item.Id" type="checkbox" class="form-check-input" id="cat_@(item.Id)" >
                <label class="form-check-label" for="cat_@(item.Id)">@item.Name</label>
                </div>
                }
                <hr>
                <h5>Cinsiyet</h5>
                <div class="form-check">
                <input class="form-check-input" type="radio" name="GenderId" value="1" id="genderId">
                <label class="form-check-label" for="genderId">
                Erkek
                </label>
                </div>
                <div class="form-check">
                <input class="form-check-input" type="radio" name="GenderId" value="2" id="genderId2">
                <label class="form-check-label" for="genderId2">
                    Kadın
                </label>
                </div>
                <hr>
                  <div class="form-check">
                <input name="IsPopular" type="checkbox" value="1" class="form-check-input" id="popular" >
                <label class="form-check-label" for="popular">Popüler</label>
                </div>
        </div>
    </div>
        <button type="submit" class="btn btn-primary">Save Product</button>

    </form>
</div>