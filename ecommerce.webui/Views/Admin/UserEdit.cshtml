@model UserDetailModel

<div class="container">

    <form asp-controller="Admin" asp-action="UserEdit" method="POST">
        <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" name="UserId" value="@Model.UserId">
        <div class="row">
            <div class="col-md-4">
    <h5 class="mt-5">Kullanıcıyı Düzenle</h5>
             <hr class="mb-4">

            <div class="mb-3">
            <label asp-for="FirstName" class="form-label">İsim</label>
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Soyisim</label>
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-4">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input asp-for="EmailConfirmed" class="form-check-input" >
                <label asp-for="EmailConfirmed" class="form-check-label" >
                    Onaylı Hesap(Email Onayı)
                </label>
                </div> 
            <button type="submit" class="btn btn-dark mt-5 w-100 ">Kaydet</button>
            </div>
           
            <div class="col-md-4 ms-5">
    <h5 class="mt-5">Rolleri Düzenle</h5>
        <hr class="mb-4">
        @foreach(var rolename in ViewBag.AllRoles){
             <div class="form-check">
                <input type="radio" name="SelectedRoles" value="@rolename" id="@rolename" class="form-check-input" @(Model.SelectedRoles.Any(i=>i==rolename) ? "checked": "")>
                <label for="@rolename" class="form-check-label" >
                    @rolename
                </label>
                </div> 
             
        }
            </div>
        </div>
        
    </form>
</div>












