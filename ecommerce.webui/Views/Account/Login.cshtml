  @model LoginModel 
    <div class="video-container">
        <video autoplay loop muted>
            <source src="~/img/loginvideo2.mp4" type="video/mp4">
        </video>
        <div class="content">

            <div class="mx-auto login-card">
                <div class="d-flex justify-content-center " style="background-color: rgba(168, 168, 168, 0.8);">
        
                    <div class="px-5 ms-xl-4">
                        <span class="h1 fw-bold mb-0"><img src="~/img/logo.webp" class="mt-4" style="width: 120px;"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-center" style="background-color: rgba(168, 168, 168, 0.8);">
        
                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5" >
        
                        <form asp-controller="Account" asp-action="Login" method="POST" style="width: 23rem;">
                 <div asp-validation-summary="All" class="text-white"></div>

                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Giriş Yap</h3>
                            <div class="form-outline mb-4">
                                <input asp-for="Email" id="form2Example18" class="form-control form-control-lg" />
                                <label class="form-label" for="form2Example18">Email</label>
                            </div>
        
                            <div class="form-outline mb-4">
                                <input asp-for="Password" id="form2Example28" class="form-control form-control-lg" />
                                <label class="form-label" for="form2Example28">Şifre</label>
                            </div>
        
                            <div class="pt-1 mb-4">
                                <button class="btn-pr-outline btn-pr btn-block w-100" type="submit">Giriş Yap</button>
                            </div>
        
                            <p class="small mb-5 pb-lg-2"><a class="text-muted" href="/account/forgotpassword">Şifreni mi unuttun?</a></p>
                            <p>Hesabın yok mu? <a href="/account/register" class="">Şimdi Kayıt Ol</a></p>
                        </form>
        
                    </div>
                </div>
            </div> 
        </div>
    </div>




